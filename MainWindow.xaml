<Window x:Class="ToolTipKullanımı.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolTipKullanımı"
        mc:Ignorable="d"
        Title="ToolTipKullanımı" Height="350" Width="525">
    <Grid>
        <Button Height="40" Width="525" Content="Doğan AY" ToolTipService.ShowDuration="2000">
            <Button.ToolTip>
                <ToolTip Cursor="">
                    <StackPanel>
                        <!--üzerine tıkladığında cursorun altında pop-up pencerede ipucu verecek-->
                        <TextBlock FontWeight="Bold" Text="ay.com" />
                        <TextBlock  Text="Yazılım Şirketi" />
                    </StackPanel>
                </ToolTip>
            </Button.ToolTip>
        </Button>
    </Grid>
</Window>
